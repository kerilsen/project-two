<div>
    {{#each posts as |post| }}
    <div class="row mb-4 col-md-5 post">
        <div class="">
            <h3>
                <a href="/forumpost/{{post.id}}">{{post.title}}</a>
            </h3>
            <p>Created by {{post.user.name}} on {{format_date post.date_created}}</p>
        </div>
        <div class="">
            <p>
                {{post.post_body}}
            </p>
        </div>
    </div>
    {{/each}}
    <div>
        <div>
            {{> new-post}}
        </div>
    </div>
</div>

<div>
    {{#each material as |materials|}}
    <div class="row mb-4 col-md-5 post">
        <div class="">
            <h3>
                <a href="/post/{{material.id}}">{{material.material_name}}</a>
            </h3>
            <p>Posted by {{material.user.name}}</p>
            {{#if material.availability}}
            <p>This item is available for borrowing!</p>
            {{else}}
            <p>This item is not currently available for borrowing.</p>
            {{/if}}
        </div>
        <div class="">
            <p>
                {{material.description}}
            </p>
        </div>
    </div>
    {{/each}}
    <div>
        <p class="">
            <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                Create a new listing
            </button>
        </p>
        <div class="collapse" id="collapseExample">
            <div class="">
                {{> listing}}
            </div>
        </div>
    </div>
</div>

<script src="./js/new-post.js"></script>